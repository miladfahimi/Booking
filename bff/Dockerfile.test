# Stage 1: Build the application using Maven
FROM maven:3.9.8-amazoncorretto-17-al2023 AS build
WORKDIR /app

# Install required tools for GitLab CI SSH authentication
RUN dnf update -y && \
    dnf install -y shadow-utils openssh-clients

# Copy only the pom.xml for dependency resolution
COPY pom.xml .
RUN mvn dependency:go-offline

# Copy the source code for the profile service
COPY src ./src

# Build the application
RUN mvn clean package -DskipTests -Pdocker

# Stage 2: Run the application using Amazon Corretto JDK
FROM amazoncorretto:17-alpine
WORKDIR /app

# Install necessary packages
RUN apk update && \
    apk add shadow

# Create a non-root user for security
RUN adduser -D -s /bin/sh appuser

# Switch to the non-root user
USER appuser

# Copy the specific JAR file from the build stage
COPY --from=build /app/target/bff-0.0.1-SNAPSHOT-exec.jar app.jar

# Expose the application port
EXPOSE 8080

# Define the entry point with the active Spring profile
ENTRYPOINT ["java", "-jar", "app.jar"]

# Health check to monitor application health
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1
